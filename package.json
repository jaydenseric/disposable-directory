{
  "name": "disposable-directory",
  "version": "3.0.0",
  "description": "Asynchronously creates a disposable directory in the OS temporary directory that gets deleted after the callback is done or errors.",
  "license": "MIT",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "repository": "github:jaydenseric/disposable-directory",
  "homepage": "https://github.com/jaydenseric/disposable-directory#readme",
  "bugs": "https://github.com/jaydenseric/disposable-directory/issues",
  "funding": "https://github.com/sponsors/jaydenseric",
  "keywords": [
    "disposable",
    "temporary",
    "directory",
    "tmp",
    "dir",
    "esm",
    "mjs"
  ],
  "files": [
    "private",
    "public"
  ],
  "main": "./public/index.mjs",
  "exports": {
    ".": "./public/index.mjs",
    "./public/": "./public/",
    "./package": "./package.json",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.20 || >= 14.13"
  },
  "devDependencies": {
    "coverage-node": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-config-env": "^19.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jsdoc-md": "^10.0.1",
    "prettier": "^2.2.1",
    "test-director": "^6.0.0"
  },
  "scripts": {
    "prepare": "npm run prepare:jsdoc && npm run prepare:prettier",
    "prepare:jsdoc": "jsdoc-md",
    "prepare:prettier": "prettier --write readme.md",
    "test": "npm run test:eslint && npm run test:prettier && npm run test:api",
    "test:eslint": "eslint --ext mjs,js .",
    "test:prettier": "prettier -c .",
    "test:api": "coverage-node test/index.mjs",
    "prepublishOnly": "npm test"
  }
}
